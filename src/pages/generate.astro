---
import Layout from '../layouts/Layout.astro';
import { GenerateFlashcardsView } from "@/components/GenerateFlashcardsView";
import { Toaster } from "@/components/ui/sonner";

// Disable static generation for this page as it needs to be dynamic
export const prerender = false;
---

<Layout title="Generate Flashcards">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold mb-6">Generate Flashcards</h1>
      <p class="text-muted-foreground mb-8">
        Enter your text below and let AI help you create flashcards. The text should be between 1,000 and 10,000 characters.
      </p>
      
      <GenerateFlashcardsView client:load />
    </div>
  </main>
  <Toaster client:load />
</Layout> 